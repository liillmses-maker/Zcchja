local Players = game:GetService("Players")
local player = Players.LocalPlayer
local gui = Instance.new("ScreenGui")
gui.Name = "LoadingScreen"
gui.Parent = player:WaitForChild("PlayerGui")

-- Фон
local background = Instance.new("Frame")
background.Name = "Background"
background.Size = UDim2.new(1, 0, 1, 0)
background.BackgroundColor3 = Color3.fromRGB(15, 15, 25)
background.BorderSizePixel = 0
background.Parent = gui

-- Основной контейнер
local container = Instance.new("Frame")
container.Name = "Container"
container.AnchorPoint = Vector2.new(0.5, 0.5)
container.Position = UDim2.new(0.5, 0, 0.5, 0)
container.Size = UDim2.new(0.4, 0, 0.3, 0)
container.BackgroundTransparency = 1
container.Parent = background

-- Логотип/надпись LOAD
local loadText = Instance.new("TextLabel")
loadText.Name = "LoadText"
loadText.Size = UDim2.new(1, 0, 0.5, 0)
loadText.Position = UDim2.new(0, 0, 0, 0)
loadText.BackgroundTransparency = 1
loadText.Text = "LOAD"
loadText.TextColor3 = Color3.fromRGB(255, 255, 255)
loadText.TextScaled = true
loadText.Font = Enum.Font.GothamBlack
loadText.TextStrokeTransparency = 0.5
loadText.TextStrokeColor3 = Color3.fromRGB(100, 150, 255)
loadText.Parent = container

-- Контейнер прогресс-бара
local progressBarContainer = Instance.new("Frame")
progressBarContainer.Name = "ProgressBarContainer"
progressBarContainer.Size = UDim2.new(1, -40, 0.1, 0)
progressBarContainer.Position = UDim2.new(0, 20, 0.7, 0)
progressBarContainer.BackgroundColor3 = Color3.fromRGB(30, 30, 45)
progressBarContainer.BorderSizePixel = 0
progressBarContainer.Parent = container

-- Сам прогресс-бар
local progressBar = Instance.new("Frame")
progressBar.Name = "ProgressBar"
progressBar.Size = UDim2.new(0, 0, 1, 0)
progressBar.BackgroundColor3 = Color3.fromRGB(100, 150, 255)
progressBar.BorderSizePixel = 0
progressBar.Parent = progressBarContainer

-- Скругление углов прогресс-бара
local corner = Instance.new("UICorner")
corner.CornerRadius = UDim.new(0.5, 0)
corner.Parent = progressBarContainer

-- Текст процентов
local percentText = Instance.new("TextLabel")
percentText.Name = "PercentText"
percentText.Size = UDim2.new(1, 0, 0.2, 0)
percentText.Position = UDim2.new(0, 0, 0.85, 0)
percentText.BackgroundTransparency = 1
percentText.Text = "0%"
percentText.TextColor3 = Color3.fromRGB(200, 200, 255)
percentText.TextScaled = true
percentText.Font = Enum.Font.GothamBold
percentText.Parent = container

-- Анимация загрузки
local totalTime = 120 -- 1000 секунд
local startTime = tick()

local function update()
    local elapsed = tick() - startTime
    local progress = math.min(elapsed / totalTime, 1)
    
    progressBar.Size = UDim2.new(progress, 0, 1, 0)
    percentText.Text = string.format("%.1f%%", progress * 100)
    
    -- Плавное изменение цвета
    local hue = progress * 0.3 -- от 0 до 0.3 (синий -> голубой)
    progressBar.BackgroundColor3 = Color3.fromHSV(hue, 0.8, 1)
    
    -- Пульсация текста LOAD
    loadText.TextTransparency = 0.2 + math.abs(math.sin(elapsed * 2)) * 0.3
    
    if progress < 1 then
        return true -- Продолжить обновление
    else
        -- Загрузка завершена
        gui:Destroy()
        return false
    end
end

-- Запуск анимации
game:GetService("RunService").Heartbeat:Connect(function()
    if not update() then
        return
    end
end)
